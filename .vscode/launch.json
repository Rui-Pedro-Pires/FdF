{
    "configurations": [
    {
        "name": "(gdb) Iniciar",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/fdf",
        "args": ["${workspaceRoot}/maps/test_maps/42.fdf"],
        "stopAtEntry": true,
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Habilitar a reformatação automática para gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Definir Tipo de Desmontagem como Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    }
    ]
}